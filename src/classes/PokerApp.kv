#:import FadeTransition kivy.uix.screenmanager.FadeTransition


<RootScreen>
    transition: FadeTransition()
    StartScreen:
    GameScreen:
    WinScreen:

<StartScreen>
    name: "start"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: 1350, 650
            source: "../assets/homepage.png"

    FloatLayout:
        Button:
            size: 500, 500
            size_hint: .08, .08
            pos_hint: {"center_x": 0.2, "center_y": 0.3}
            background_color: 0, 0, 0, 0

            on_press: root.manager.current = "game"

            Image:
                source: "../assets/play.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y


<GameScreen>
    name: "game"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: 1350, 650
            source: "../assets/basebackground.png"

    GridLayout:
        rows: 1
        size: root.size

        Image:
            source: "../assets/hand.png"
            allow_stretch: True
            keep_ratio: True
            size: self.size
            size_hint: .05, .05
            anchor_x: "left"
            anchor_y: "bottom"

        Button:
            size_hint: .01, .01
            # pos_hint: {"center_x": 0.4, "center_y": 0.2}
            background_color: 0, 0, 0, 0

            on_press: root.manager.current = "win"

            Image:
                source: "../assets/call.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            size_hint: .01, .01
            # pos_hint: {"center_x": 0.5, "center_y": 0.2}
            background_color: 0, 0, 0, 0

            on_press: root.manager.current = "game"

            Image:
                source: "../assets/raise.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            size_hint: .01, .01
            # pos_hint: {"center_x": 0.5, "center_y": 0.2}
            background_color: 0, 0, 0, 0

            on_press: root.manager.current = "game"

            Image:
                source: "../assets/fold.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y

<WinScreen>
    name: "win"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: 1350, 650
            source: "../assets/youwon.png"

    BoxLayout:
        Button:
            size_hint: 0.1, 0.1
            background_color: 0, 0, 0, 0

            on_press: root.manager.current = "game"

            Image:
                source: "../assets/playagain.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
